<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dharani.navigation.Contact_us">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:layout_margin="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:padding="5dp"
            android:drawableLeft="@drawable/about_place"
            android:drawablePadding="2dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:textSize="16sp"
            android:layout_marginLeft="35dp"/>
        <TextView
            android:id="@+id/phone_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone:+919000999192"
            android:textColor="#FF0000"
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:padding="5dp"
            android:drawableLeft="@drawable/about_phone"
            android:drawablePadding="2dp"/>

        <TextView
            android:id="@+id/email_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:support@sukes.in"

            android:textColor="#ff0000"
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:padding="5dp"
            android:drawableLeft="@drawable/about_email"
            android:drawablePadding="2dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bussiness Hours"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="15dp"
            android:textSize="20sp"
            android:padding="5dp"
            android:drawablePadding="2dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monday-Saturday 9AM to 6PM"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:padding="5dp"
            android:drawableLeft="@drawable/about_time"
            android:drawablePadding="2dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sunday 9AM to 1PM"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="18sp"
            android:padding="5dp"
            android:drawableLeft="@drawable/about_time"
            android:drawablePadding="2dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Follow Us"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="15dp"
            android:textSize="20sp"
            android:padding="5dp"
            android:drawablePadding="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@raw/fb" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@raw/in" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@raw/drib" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@raw/twit" />


        </LinearLayout>


    </LinearLayout>



</ScrollView>
